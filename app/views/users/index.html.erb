
<p id="notice"><%= notice %></p>

<div class="container">

  <div class="row">
      <div class="col-xs-3">

        <div class="row">
          <h2>User info</h2>
          <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg" %><br>
          <%= @user.name %><br>
          <%= @user.introduction %><br>
          <%= link_to "edit", edit_user_path(@user), class: "btn btn-default" %>
          </div>

          <div class="row">
            <h2>New book</h2>
            <%=  form_for @book do |f| %>
             <%= f.label :title %><br>
             <%= f.text_field :title %><br>
             <%= f.label :Opinion %><br>
             <%= f.text_area :body %><br>
             <%= f.submit %>
             <% end %>

         </div>
      </div>


      <div class="col-xs-9">
        <h2>Users</h2>

       <table class="table table-striped">
       <thead>
       <tr>
      <th> image</th>
      <th>name</th>
      <th>show</th>
      </tr>
      </thead>

     <tbody>
        <% @users.each do |user| %>
        <tr>
          <th><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg" %></th>
          <th><%= user.name %></th>
          <th><%= link_to "Show", user_path(user) %></th>
      <% end %>
       </tr>
      </tbody>
      </table>

      </div>
  </div>

