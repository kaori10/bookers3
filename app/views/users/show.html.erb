
<p id="notice"><%= notice %></p>

<div class="container">

  <div class="row">
      <div class="col-lg-4">

        <div class="row">
          <h2>User info</h2>
          <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg" %><br>
          <%= @user.name %><br>
          <%= @user.introduction %><br>
          <%= link_to "edit", edit_user_path(@user) %>
          </div>

          <div class="row">
          	<h2>New Book</h2>
          	<%=  form_for @book do |f| %>
             <%= f.label :title %>
             <%= f.text_field :title %><br>
             <%= f.label :body %>
             <%= f.text_area :body %>
             <%= f.submit %>
             <% end %>

         </div>
      </div>


      <div class="col-lg-8">
      	<h2>Book</h2>

        <table>
	     <thead>
		   <tr>
			<th> name</th>
			<th>Title</th>
			<th>Body</th>
		  </tr>
     	</thead>

	   <tbody>
 		    <% @user.books.each do |book| %>
	    	<tr>
          <th>
			<%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg" %>
		    </th>
			<th><%= book.title %></th>
			<th><%= book.body %></th>
			<% end %>
		   </tr>
      </tbody>
      </table>

      </div>
  </div>

