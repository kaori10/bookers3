
<p id="notice"><%= notice %></p>

<div class="container">

  <div class="row">
      <div class="col-xs-3">

        <div class="row">
          <h2>User info</h2>
          <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg" %><br>
          <%= @user.name %><br>
          <%= @user.introduction %><br>
          <%= link_to "edit", edit_user_path(@user), class: "btn btn-default" %>
          </div>

          <div class="row">
          	<h2>New book</h2>
          	<%=  form_for @book do |f| %>
             <%= f.label :title %><br>
             <%= f.text_field :title %><br>
             <%= f.label :Opinion %><br>
             <%= f.text_area :body %><br>
             <%= f.submit %>
             <% end %>

         </div>
      </div>


      <div class="col-xs-9">
      	<h2>Book</h2>

       <table class="table table-striped">
	     <thead>
		   <tr>
			<th> image</th>
			<th>Title</th>
			<th>Opinion</th>
		  </tr>
     	</thead>

	   <tbody>
 		    <% @user.books.each do |book| %>
	    	<tr>
          <th><%=link_to user_path(book.user.id) do %>
			<%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg" %>
      <% end %>
		    </th>
			<th><%=link_to book_path(book) do %>
        <%= book.title %>
          <% end %>
        </th>
			<th><%= book.body %></th>
			<% end %>
		   </tr>
      </tbody>
      </table>

      </div>
  </div>

