<p id="notice"><%= notice %></p>

<div class="container">

  <div class="row">
      <div class="col-xs-3">

        <div class="row">
          <h2>User info</h2>
          <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg" %><br>
          <%= @book.user.name %><br>
          <%= @book.user.introduction %><br>
          <%= link_to "edit", edit_user_path(@book.user.id) %>

          </div>

          <div class="row">
            <h2>New Book</h2>
            <%=  form_for @book do |f| %>
             <%= f.label :title %><br>
             <%= f.text_field :title %><br>
             <%= f.label :Opinion %><br>
             <%= f.text_area :body %><br>
             <%= f.submit %>
             <% end %>

         </div>
      </div>

      <div class="col-xs-9">
      	<h2>Book detail</h2>
      <table class="table table-striped">
	　　　　<thead>
		　　<tr>
			<th> name</th>
			<th>Title</th>
			<th>Body</th>
		</tr>
	　　</thead>


	　　<tbody>
		<tr>
			<th><%=link_to user_path(@book.user.id) do %>
				<%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg" %>
				<%= @book.user.name%>
				<% end %>
			</th>
			<th><%=link_to book_path(@book) do %>
				<%= @book.title %>
					<% end %>
				</th>
			<th><%= @book.body %></th>
			<th>
	         <% if @book.user.id == current_user.id %>
	         <%= link_to "Edit", edit_book_path(@book) %>
	         <%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}  %>
	         <% end %>
			</th>
		</tr>
	</tbody>
　　</table>




