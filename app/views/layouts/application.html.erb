<!DOCTYPE html>
<html>
  <head>
    <title>Bookers3</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification is-info">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="notification is-danger">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>

<header>

<h4>Bookers</h4>
<% if user_signed_in? %>
  <%= link_to "Home", user_path(current_user), class: "btn btn-default" %>
  <%= link_to "Users", users_path, class: "btn btn-default" %>
  <%= link_to "Books", books_path, class: "btn btn-default" %>
  <%= link_to "logout", destroy_user_session_path, method: :delete, class: "btn btn-default" %>
<% else %>
  <%= link_to "Home", root_path, class: "btn btn-default" %>
  <%= link_to "About", home_about_path, class: "btn btn-default" %>
  <%= link_to "sign up", new_user_registration_path, class: "btn btn-default" %>
  <%= link_to "login", new_user_session_path, class: "btn btn-default" %>

<% end %>

</header>

    <%= yield %>
  </body>
</html>
